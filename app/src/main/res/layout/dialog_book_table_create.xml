<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txv_book_table_result_title"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/eater"
        android:gravity="center_horizontal"
        android:textColor="@color/blackText"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Вы успешно забронировали Столик номер 1 в ресторане 'У берега моря'." />

    <TextView
        android:id="@+id/txv_book_table_result_date"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/eater"
        android:gravity="center_horizontal"
        android:textColor="@color/blackText"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txv_book_table_result_title"
        tools:text="Ваша дата бронирования: 2 мая 2021 год." />

    <TextView
        android:id="@+id/txv_book_table_result_time"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/eater"
        android:gravity="center_horizontal"
        android:textColor="@color/blackText"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txv_book_table_result_date"
        tools:text="Ваше время бронирования: 17:00 на 2 часа." />

</androidx.constraintlayout.widget.ConstraintLayout>