<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_sign_up">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.eatbook.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.eatbook.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.eatbook.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_sign_up"
        android:name="com.example.eatbook.ui.sign.up.SignUpFragment"
        android:label="@string/title_sign_up"
        tools:layout="@layout/sign_up_fragment" >
        <action
            android:id="@+id/action_navigation_sign_up_to_navigation_sign_in"
            app:destination="@id/navigation_sign_in" />
    </fragment>

    <fragment
        android:id="@+id/navigation_sign_in"
        android:name="com.example.eatbook.ui.sign.in.SignInFragment"
        tools:layout="@layout/sign_in_fragment"
        />
</navigation>